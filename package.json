{
  "name": "playwright-codemirror",
  "version": "0.0.7-alpha",
  "description": "CodeMirror 6-tailored Playwright testing helpers with idiomatic API",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:fixtures": "node tests/fixtures/build-fixtures.mjs",
    "test": "npm run build:fixtures && playwright test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "playwright",
    "codemirror",
    "testing",
    "e2e",
    "automation"
  ],
  "author": "CodjiFlo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodjiFlo/playwright-codemirror.git"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "devDependencies": {
    "@codemirror/state": "^6.5.0",
    "@codemirror/view": "^6.35.0",
    "@playwright/test": "^1.50.0",
    "codemirror": "^6.0.0",
    "esbuild": "^0.27.2",
    "serve": "^14.2.5",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  }
}
